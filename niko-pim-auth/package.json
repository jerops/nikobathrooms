{
  "name": "niko-pim-auth",
  "version": "1.0.0",
  "description": "PIM authentication system for Nikobathrooms - secure user authentication with role-based access control",
  "main": "src/index.js",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "start": "webpack serve --mode development",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "clean": "rm -rf dist/",
    "validate-env": "node scripts/validate-env.js"
  },
  "keywords": [
    "authentication",
    "supabase",
    "pim",
    "nikobathrooms",
    "user-management",
    "role-based-access"
  ],
  "author": "Jerops",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jerops/nikobathrooms.git",
    "directory": "niko-pim-auth"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.55.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-loader": "^9.2.1",
    "webpack": "^5.101.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1",
    "dotenv": "^16.3.0",
    "jest": "^29.7.0",
    "eslint": "^8.57.0",
    "@jest/globals": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": ["warn", { "allow": ["warn", "error"] }],
      "no-unused-vars": "warn"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}